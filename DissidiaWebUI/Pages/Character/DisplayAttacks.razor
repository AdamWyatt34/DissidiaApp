<Collapsable Title="Attacks" Collapsed="true">
    @if (isAuthenticated)
    {
        <button @onclick="@(() => ShowAddAttackForm())" type="button" class="btn btn-link">Add Attack</button>
    }
    <Collapsable Title="Bravery Attacks" Collapsed="true" Value="">
    @foreach (var bravery in _bravery)
    {
        <Attack RenderAttack=bravery HandleDropdownButtonSelect=HandleDropDownSelection IsAuthenticated=@isAuthenticated/>
        <br />
    }
    </Collapsable>

    <Collapsable Title="HP Attacks" Collapsed="true" Value="">
        @foreach (var hp in _hps)
        {
            <Attack RenderAttack=hp HandleDropdownButtonSelect=HandleDropDownSelection IsAuthenticated=@isAuthenticated/>
            <br />
        }
    </Collapsable>
</Collapsable>




