@using DissidiaWebUI.Helpers
<div class="input-group mb-3">
    <span class="input-group-text">Name, Frames, Priority</span>
    <InputText disabled class="form-control" @bind-Value=@RenderAttack.Name/>
    <InputText disabled class="form-control" @bind-Value=@RenderAttack.Frames/>
    <InputSelect class="form-select-sm" disabled @bind-Value=@RenderAttack.Priority>
        @foreach (var priority in priorityValues)
        {
            <option value=@priority>@priority.ToDescription()</option>
        }
    </InputSelect>
</div>
<div class="input-group mb-3">
    <span class="input-group-text">Description</span>
    <InputText disabled class="form-control" @bind-Value=@RenderAttack.Description/>
    @if (IsAuthenticated)
    {
        <Dropdown TItem="string" OnSelected=@HandleOnSelected>
            <InitialTip>Actions</InitialTip>
            <ChildContent>
                <DropdownListItem Item="@edit">Edit</DropdownListItem>
                <div class="dropdown-divider"></div>
                <DropdownListItem Item="@delete">Delete</DropdownListItem>
            </ChildContent>
        </Dropdown>
    }
</div>

