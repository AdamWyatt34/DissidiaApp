@using DissidiaWebUI.Helpers

<img class="img-thumbnail" src=@RenderBuild.ImagePath/>
<div class="input-group">
    <span class="input-group-text">Build Description</span>
    <InputTextArea class="form-control" @bind-Value=@RenderBuild.Description disabled={!IsAuthenticated}/>
    @if (IsAuthenticated)
    {
        <Dropdown TItem="string" OnSelected=@HandleOnSelected>
            <InitialTip>Actions</InitialTip>
            <ChildContent>
                <DropdownListItem Item="@edit">Edit</DropdownListItem>
                <div class="dropdown-divider"></div>
                <DropdownListItem Item="@delete">Delete</DropdownListItem>
            </ChildContent>
        </Dropdown>
    }    
</div>
@*Make add build model as a new modal. Use file uploader from boostrap*@